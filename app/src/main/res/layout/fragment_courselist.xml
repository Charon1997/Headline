<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/editText"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/button_style"
            app:srcCompat="@android:drawable/ic_menu_search"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:textSize="12sp"
            android:background="@drawable/shape_rectangle_radius"
            app:layout_constraintLeft_toRightOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_rectangle_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            style="@style/button_style"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/back_this_week"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/editText"
            app:layout_constraintLeft_toRightOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:columnCount="8"
            android:orientation="vertical"
            android:rowCount="13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/schedule_all_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="0"
                android:padding="3dp"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="1"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="2"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="3"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="4"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="5"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="6"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="7"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="8"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="9"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="10"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="11"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/schedule_item_padding"
                android:paddingTop="@dimen/schedule_item_padding"
                android:text="12"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周一"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_column="2"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周二"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周三"
                android:textColor="@android:color/tertiary_text_dark" />

            <TextView
                android:layout_column="4"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周四" />

            <TextView
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周五" />

            <TextView
                android:layout_column="6"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周六" />

            <TextView
                android:layout_column="7"
                android:layout_columnWeight="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="周日" />

        </GridLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>